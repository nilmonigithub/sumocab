<%- include ../partials/header.html %>


<div class="table-list">
    <div class="row">
    
    
        <div class="col-md-12">

            <div class="panel panel-default panel-table">
              <div class="panel-heading pannerl-sec">
                <div class="row">
                  <div class="col col-xs-6">
                    <h3 class="panel-title">Coupon Discount List</h3>
                  </div>
                  <div id="flashmessage" ><h4 style="color:cornflowerblue;"><%= message %></h4> </div>
                  <div class="col col-xs-6 text-right">
                  
                    <button><a class="btn btn-sm btn-primary btn-create"  href="/coupon_discount"></i> Create New</a></button>   
                  </div>
                </div>
              </div>
              <div class="panel-body table-responsive">
                <table class="table table-striped table-bordered table-list" id="myTable">
                  <thead>
                        <tr>
                                <th>SL NO</th>
                                <th>Coupon Name</th>
                                <th>Coupon Code</th>
                                <th>Coupon Amount</th>
                                <th>Coupon Start Date</th>
                                <th>Coupon End Date</th>
                                <th>Coupon Status</th>
                                <th>Action</th>
                            </tr>
                  </thead>
                  <tbody>
                        <% var i=1;
                        list.forEach(function(val) { %>
                    <tr>
                        <td> <%=  i %></td>
                        <td><%= val.coupon_name %></td>
                        <td><%= val.coupon_code %></td> 
                        <td><%= val.coupon_amount %></td>
                        <td><%= val.coupon_start_date %></td>
                        <td><%= val.coupon_end_date %></td>
                        <td><%= val.coupon_status %></td>
                        
                        <td>
                            <a href="/coupon_discount/<%= val._id %>"><i class="fa fa-pencil fa-lg" aria-hidden="true" title="edit"></i></a>   
                            <a href="/coupon_discount/delete/<%= val._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" style="color:red" title="delete" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    <% i++; }) %>
                </tbody>
             </table>
            
              </div>
              
            </div>

</div></div></div>

<%- include ../partials/footer.html %>

<script>
    $(document).ready(function(){
        $('#myTable').dataTable();
    });
    </script>

