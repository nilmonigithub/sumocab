<%- include ../partials/header.html %>

<div class="table-list">
    <div class="row">
    
    
        <div class="col-md-12">

            <div class="panel panel-default panel-table">
              <div class="panel-heading pannerl-sec">
                <div class="row">
                  <div class="col col-xs-6">
                    <h3 class="panel-title">Vehicle Document List</h3>
                  </div>
                  <div id="flashmessage" ><h4 style="color:cornflowerblue;"><%= message %></h4> </div>
                  <div class="col col-xs-6 text-right">
                  
                    <button><a class="btn btn-sm btn-primary btn-create"  href="/vehicle_document/add"></i> Create New</a></button>   
                  </div>
                </div>
              </div>
              <div class="panel-body table-responsive">
                <table class="table table-striped table-bordered table-list" id="myTable">
                  <thead>
                        <tr>
                                <th>SL NO</th>
                                <th>Vehicle Id</th>
                                <th>Image</th>
                                <th>Registration Type</th>
                                <th>Registration No</th>
                                <th>Registration Date</th>         
                                <th>Expiry Date</th>
                               
                                <th>Action</th>
                            </tr>
                  </thead>
                  <tbody>
                        <% var i=1;
                        list.forEach(function(val) { %>
                        <tr>
                            <td> <%= i %></td>
                            
                            <td><% vehicle.forEach(function(veh) {
                                if(veh._id==val.vehicle_id){ %>
                                <%= veh.model_name %>
                                <% } }); %></td>
                
                                <td> <img <% if(val.image && val.image!=''){%>src="<%= baseurl %>/uploads/<%= val.image %>" <%} else{%> src="<%= baseurl %>/images/no_image.jpg"<%}%> height="50px" alt="">
                                </td>
                            <td><%= val.registration_type %></td>
                            <td><%= val.registration_no %></td>
                            <td><%= val.registration_date %></td>
                            <td><%= val.expiry_date %></td>
                            <td>
                                <a href="/vehicle_document/editvehicledoc/<%= val._id %>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                                <a href="/vehicle_document/delete/<%= val._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                        <% i++; }) %>
                    </tbody>
             </table>
            
              </div>
              
            </div>

</div></div></div>

<%- include ../partials/footer.html %>

<script>
    $(document).ready(function(){
        $('#myTable').dataTable();
    });
    </script>

