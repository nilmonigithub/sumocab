<%- include ../partials/header.html %>


<div class="table-list">
    <div class="row">
    
    
        <div class="col-md-12">

            <div class="panel panel-default panel-table">
              <div class="panel-heading pannerl-sec">
                <div class="row">
                  <div class="col col-xs-6">
                    <h3 class="panel-title">Payment List</h3>
                  </div>
                  <div id="flashmessage" ><h4 style="color:cornflowerblue;"><%= message %></h4> </div>
                  <div class="col col-xs-6 text-right">
                  
                    <button><a class="btn btn-sm btn-primary btn-create"  href="/payment/add"></i> Create New</a></button>   
                  </div>
                </div>
              </div>
              <div class="panel-body table-responsive">
                <table class="table table-striped table-bordered table-list" id="myTable">
                  <thead>
                        <tr>
                                <th>SL NO</th>
                                <th>Trip Id</th>
                                <th>Payment Amount</th>
                                <th>Coupon Code </th>
                                <th>Discount Amount</th>
                                <th>Total Payment</th>
                                <th>Payment Mode</th>
                                <th>Payment Getway</th>
                                <th>Transaction Id</th>
                                <th>Payment Date</th>
                                <th>Action</th>
                            </tr>
                  </thead>
                  <tbody>
                        <% var i=1;
                        list.forEach(function(val) { %>
                    <tr>
                        <td> <%= i %></td>
                        
                         <td><% tripList.forEach(function(trp) {
                          if(trp._id==val.trip_id){ %>
                          <%= trp.to_name %>
                          <% } }); %></td>
                      
                         <td><%= val.payment_amount %></td> 
                         <!-- <td><%= val.coupon_code_id %></td> -->

                         <td><% cuponList.forEach(function(cup) {
                          if(cup._id==val.coupon_code_id){ %>
                          <%= cup.coupon_code %>
                          <% } }); %></td>
                      
                         <td><%= val.discount_amount %></td> 
                         <td><%= val.total_payment %></td> 
                         <td><%= val.payment_mode %></td> 
                         <td><%= val.payment_getway %></td> 
                         <td><%= val.transaction_id %></td>
                         <td><%= val.payment_date %></td>
                         
                        
            
                        <td>
                            <a href="/payment/editpayment/<%= val._id %>"><i class="fa fa-pencil fa-lg" aria-hidden="true" title="edit"></i></a>
                            <a href="/payment/delete/<%= val._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" style="color:red" title="delete" aria-hidden="true"></i></a>
                        </td>
                       
                    </tr>
                    <% i++; }) %>
                </tbody>
             </table>
            
              </div>
             
            </div>

</div></div></div>

<%- include ../partials/footer.html %>

<script>
    $(document).ready(function(){
        $('#myTable').dataTable();
    });
    </script>

