<!------ Include the above in your HEAD tag ---------->

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>

<div class="container">
    <div class="row">
    
    
        <div class="col-md-12">

            <div class="panel panel-default panel-table">
              <div class="panel-heading">
                <div class="row">
                  <div class="col col-xs-6">
                    <h3 class="panel-title">Payment List</h3>
                  </div>
                  <div class="col col-xs-6 text-right">
                  
                    <button><a class="btn btn-sm btn-primary btn-create"  href="/payment/add"></i> Create New</a></button>   
                  </div>
                </div>
              </div>
              <div class="panel-body">
                <table class="table table-striped table-bordered table-list">
                  <thead>
                        <tr>
                                <th>SL NO</th>
                                <th>Trip Id</th>
                                <th>Payment Amount</th>
                                <th>Coupon Code Id</th>
                                <th>Discount Amount</th>
                                <th>Total Payment</th>
                                <th>Payment Mode</th>
                                <th>Payment Getway</th>
                                <th>Transaction Id</th>
                                <th>Payment Date</th>
                                <th>Action</th>
                            </tr>
                  </thead>
                  <tbody>
                        <% var i=1;
                        list.forEach(function(val) { %>
                    <tr>
                        <td> <%= i %></td>
                         <td><%= val.trip_id %></td>
                         <td><%= val.payment_amount %></td> 
                         <td><%= val.coupon_code_id %></td>
                         <td><%= val.discount_amount %></td> 
                         <td><%= val.total_payment %></td> 
                         <td><%= val.payment_mode %></td> 
                         <td><%= val.payment_getway %></td> 
                         <td><%= val.transaction_id %></td>
                         <td><%= val.payment_date %></td>
                         
                        
            
                        <td>
                            <a href="/payment/editpayment/<%= val._id %>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                            <a href="/payment/delete/<%= val._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                        </td>
                       
                    </tr>
                    <% i++; }) %>
                </tbody>
             </table>
            
              </div>
              <div class="panel-footer">
                <div class="row">
                  <div class="col col-xs-4">Page 1 of 5
                  </div>
                  <div class="col col-xs-8">
                    <ul class="pagination hidden-xs pull-right">
                      <li><a href="#">1</a></li>
                      <li><a href="#">2</a></li>
                      <li><a href="#">3</a></li>
                      <li><a href="#">4</a></li>
                      <li><a href="#">5</a></li>
                    </ul>
                    <ul class="pagination visible-xs pull-right">
                        <li><a href="#">«</a></li>
                        <li><a href="#">»</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>

</div></div></div>

