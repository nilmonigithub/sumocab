<%- include ../partials/header.html %>


<div class="driveradd">
<div  class="container"  >
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="well well-sm">

        <form  action="/customer/addcustomer" method="POST" enctype="multipart/form-data" autocomplete="off">
            <input type="hidden" name="_id" value="<%= customer._id %>" >
            <a style="float:right; margin-top: 20px;" class="btn btn-secondary" href="/customer/list"><i class="fa fa-list-alt"></i> View All</a>
            <h2><b><%= viewTitle %></h2><br><hr style="color:cornflowerblue; border:solid">

            
                <div   class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" name="fullName" value="<%= customer ? customer.fullName : '' %>">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                                <label>Mobile</label>
                                <input type="text" class="form-control" name="user_mobile"  value="<%= customer ? customer.user_mobile : '' %>"> 
                        </div>
                    </div>
                        
                    <div class="col-md-6">
                        <div class="form-group ">
                                <label>Email</label>
                                <input type="text" class="form-control" name="email" value="<%= customer ? customer.email : '' %>">                       
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                            <label>Image</label>
                            <input type="file" class="form-control" name="user_image" id="user_image" value="<%= customer ? customer.user_image : '' %>" onchange="PreviewImage();">
                        </div>
                        <div class=" col-md-4">
                            <img id="imagePreview" <% if(customer){ if(customer.user_image==null) {%> src="<%= baseurl %>/images/no_image.jpg"<% }else{ %> src="<%= baseurl %>/uploads/<%= customer.user_image %>"<% } }else{ %> src="<%= baseurl %>/images/no_image.jpg"<% } %> style="width: 150px; height: 150px;" />
                        
                        </div> 
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Date of Birth</label>
                                <input type="date" class="form-control" name="dob"   value="<%= customer ? customer.dob : '' %>">                          
                        </div>
                    </div>

                    <div class="col-md-6">
                            <div class="form-group  ">
                                    <label>City</label>
                                    <input type="text" class="form-control" name="city"   value="<%= customer ? customer.city : '' %>">                        
                            </div>
                    </div>

                    <div class="col-md-6">
                            <div class="form-group  ">
                                    <label>Username</label>
                                    <input type="text" class="form-control" name="username"   value="<%= customer ? customer.username : '' %>">                         
                            </div>
                    </div>

                    <div class="col-md-6">
                            <div class="form-group  ">
                                    <label>Password</label>
                                    <input type="password" class="form-control" name="password"  value="">                         
                            </div>
                    </div>
                    
                    
                
             
                    <div class="col-md-12">
                            <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-database"></i> Submit</button>
                            
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
        
    </div>
</div>

    <%- include ../partials/footer.html %>

<script type="text/javascript">
    function validatePassword()
    {
    var a = document.getElementById("password").value;
    //alert(a.length);
    if ((a.length < 6) || (a.length > 10))
    {
    alert("Your Password must be 6 to 10 Character");
    return false;
    }else{
      return true;
    }
  }
</script>

<script type="text/javascript">
    function PreviewImage() {
  
      var fileInput = document.getElementById('user_image');
        var filePath = fileInput.value;
        var allowedExtensions = /(\.jpg|\.jpeg|\.png)$/i;
        if(!allowedExtensions.exec(filePath)){
            alert('Please upload file having extensions .jpeg/.jpg/.png  only.');
            fileInput.value = '';
            return false;
        }else{
            //Image preview
            if (fileInput.files && fileInput.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('imagePreview').innerHTML = '<img src="'+e.target.result+'"/>';
                };
                reader.readAsDataURL(fileInput.files[0]);
            }
        }
  
  
    var oFReader = new FileReader(); oFReader.readAsDataURL(document.getElementById("user_image").files[0]);
    oFReader.onload = function (oFREvent) {
    document.getElementById("imagePreview").src = oFREvent.target.result;
    };
  };

  </script>