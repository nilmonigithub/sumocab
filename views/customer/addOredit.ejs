<%- include ../partials/header.html %>

<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div  class="container"  >
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="well well-sm">

        <form  action="/customer/addcustomer" method="POST" autocomplete="off">
            <input type="hidden" name="_id" value="<%= customer._id %>" >
            <h2><b><%= viewTitle %></h2><br><hr style="color:cornflowerblue; border:solid">

            
                <div   class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" name="fullName" value="<%= customer ? customer.fullName : '' %>">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                                <label>Mobile</label>
                                <input type="text" class="form-control" name="user_mobile"  value="<%= customer ? customer.user_mobile : '' %>"> 
                        </div>
                    </div>
                        
                    <div class="col-md-6">
                        <div class="form-group ">
                                <label>Email</label>
                                <input type="text" class="form-control" name="email" value="<%= customer ? customer.email : '' %>">                       
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Image</label>
                                <input type="file" class="form-control" name="user_image"  value="<%= customer ? customer.user_image : '' %>">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Date of Birth</label>
                                <input type="date" class="form-control" name="dob"   value="<%= customer ? customer.dob : '' %>">                          
                        </div>
                    </div>

                    <div class="col-md-6">
                            <div class="form-group  ">
                                    <label>City</label>
                                    <input type="text" class="form-control" name="city"   value="<%= customer ? customer.city : '' %>">                        
                            </div>
                    </div>

                    <div class="col-md-6">
                            <div class="form-group  ">
                                    <label>Username</label>
                                    <input type="text" class="form-control" name="username"   value="<%= customer ? customer.username : '' %>">                         
                            </div>
                    </div>

                    <div class="col-md-6">
                            <div class="form-group  ">
                                    <label>Password</label>
                                    <input type="password" class="form-control" name="password"  value="">                         
                            </div>
                    </div>
                    
                    
                
             
                    <div class="col-md-12">
                            <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-database"></i> Submit</button>
                            <a class="btn btn-secondary" href="/customer/list"><i class="fa fa-list-alt"></i> View All</a>
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
        
    </div>

    <%- include ../partials/footer.html %>

<script type="text/javascript">
    function validatePassword()
    {
    var a = document.getElementById("password").value;
    //alert(a.length);
    if ((a.length < 6) || (a.length > 10))
    {
    alert("Your Password must be 6 to 10 Character");
    return false;
    }else{
      return true;
    }
  }
    </script>