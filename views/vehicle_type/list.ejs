<%- include ../partials/header.html %>


<div class="table-list">
    <div class="row">
    
    
        <div class="col-md-12">

            <div class="panel panel-default panel-table">
              <div class="panel-heading pannerl-sec">
                <div class="row">
                  <div class="col col-xs-6">
                    <h3 class="panel-title">Vehicle Type List</h3>
                  </div>
                  <div id="flashmessage" ><h4 style="color:cornflowerblue;"><%= message %></h4> </div>
                  <div class="col col-xs-6 text-right">
                  
                    <button><a class="btn btn-sm btn-primary btn-create"  href="/vehicle_type/add"></i> Create New</a></button>   
                  </div>
                </div>
              </div>
              <div class="panel-body table-responsive">
                <table class="table table-striped table-bordered table-list" id="myTables">
                  <thead>
                    <tr>
                        <th>SL NO</th>
                        <th>Name</th>
                        <th>Minimum Fare</th>
                        <th>Minimum Distance</th>
                        <th>Minimum Time</th>
                        <th>Icon</th>
                        <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% var i=1;
                    list.forEach(function(val) { %>
                <tr>
                    <td> <%= i %></td>
                     <td><%= val.name %></td>
                     <td><%= val.min_fare %></td> 
                     <td><%= val.min_distance %></td>
                     <td><%= val.min_time %></td>
                     <!-- <td><%= val.user_image %></td> -->
                     <td> <img <% if(val.icon && val.icon!=''){%>src="<%= baseurl %>/uploads/<%= val.icon %>" <%} else{%> src="<%= baseurl %>/images/no_image.jpg"<%}%> height="50px" alt="">
                     </td>
                    
        
                    <td>
                        <a href="/vehicle_type/editvehicle_type/<%= val._id %>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                        <a href="/vehicle_type/delete/<%= val._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                    </td>
                   
                </tr>
                <% i++; }) %>
            </tbody>
             </table>
            
              </div>
              
            </div>

</div></div></div>

<%- include ../partials/footer.html %>

<script>
    $(document).ready(function(){
        $('#myTables').dataTable();
    });
    </script>


