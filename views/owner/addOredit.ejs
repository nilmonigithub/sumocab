<%- include ../partials/header.html %>

<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div  class="container"  >
    <div class="row">
        <div class="col-md-8 col-md-offset-2 ">
            <div class="well well-sm">

        <form  action="/owner/addowner" method="POST" enctype="multipart/form-data" autocomplete="off">
            <input type="hidden" name="_id" value="<%= owner._id %>" >
            <b><%= viewTitle %></b><br><hr>

            
                <div   class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" name="fullName" value="<%= owner ? owner.fullName : '' %>">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                                <label>Mobile</label>
                                <input type="text" class="form-control" name="user_mobile"  value="<%= owner ? owner.user_mobile : '' %>">
                                 
                        </div>
                    </div>
                        
                    <div class="col-md-6">
                        <div class="form-group ">
                                <label>Email</label>
                                <input type="text" class="form-control" name="email"  value="<%= owner ? owner.email : '' %>">                        
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Image</label>
                                <input type="file" class="form-control" name="user_image" id="user_image" value="<%= owner ? owner.user_image : '' %>" onchange="PreviewImage();">
                        </div>
                    
                        <div class=" col-md-4">
                            <img id="imagePreview" <% if(owner){ if(owner.user_image==null) {%> src="<%= baseurl %>/images/no_image.jpg"<% }else{ %> src="<%= baseurl %>/uploads/<%= owner.user_image %>"<% } }else{ %> src="<%= baseurl %>/images/no_image.jpg"<% } %> style="width: 150px; height: 150px;" />
                        
                        </div> 
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Date of Birth</label>
                                <input type="date" class="form-control" name="dob"  value="<%= owner ? owner.dob : '' %>">                            
                        </div>
                    </div>

                    <div class="col-md-6">
                            <div class="form-group  ">
                                    <label>Date of Joining</label>
                                    <input type="date" class="form-control" name="doj"   value="<%= owner ? owner.doj : '' %>">                           
                            </div>
                    </div>

                    <div class="col-md-6">
                            <div class="form-group  ">
                                    <label>Adhaar Card</label>
                                    <input type="text" class="form-control" name="adhaar_card" id="adhaar_card" onblur="AadharValidate();" value="<%= owner ? owner.adhaar_card : '' %>">                           
                            </div>
                    </div>

                    <div class="col-md-6">
                            <div class="form-group  ">
                                    <label>Username</label>
                                    <input type="text" class="form-control" name="username"  value="<%= owner ? owner.username : '' %>">
                            </div>
                    </div>

                    <div class="col-md-6">
                            <div class="form-group  ">
                                    <label>Password</label>
                                     <input type="password" class="form-control" name="password"  value="">
                            </div>
                    </div>

                <div class="col-md-6">
                    <div class="form-group">
                            <label>Permanent Address</label>
                             <textarea rows="6" cols="6" type="text" id="permanent_address" name="permanent_address"   class="form-control col-md-7 col-xs-7" ><%= owner ? owner.permanent_address : '' %></textarea>
                    </div>
                </div>
                    
                <div class="col-md-6">
                    <div class="form-group">
                            <label>Present Address</label>
                            <textarea rows="6" cols="6" type="text" id="present_address" name="present_address"  class="form-control col-md-7 col-xs-7" ><%= owner ? owner.present_address : '' %></textarea>
                            <input type="checkbox" name="checkadd" onclick="filladdress(this.form)"<p> Present Address is same as Permanent Address </p>
                    </div>
                </div>
                    
                    
                
             
                    <div class="col-md-12">
                            <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-database"></i> Submit</button>
                            <a class="btn btn-secondary" href="/owner/list"><i class="fa fa-list-alt"></i> View All</a>
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
        
    </div>

    <%- include ../partials/footer.html %>

<script type="text/javascript">
    function validatePassword()
    {
    var a = document.getElementById("password").value;
    //alert(a.length);
    if ((a.length < 6) || (a.length > 10))
    {
    alert("Your Password must be 6 to 10 Character");
    return false;
    }else{
      return true;
    }
  }
    </script>


<script type="text/javascript">
    function AadharValidate() {
        var aadhar = document.getElementById("adhaar_card").value;
        var adharcardTwelveDigit = /^\d{12}$/;
        var adharSixteenDigit = /^\d{16}$/;
        if (aadhar != '') {
            if (aadhar.match(adharcardTwelveDigit)) {
                return true;
            }
            else if (aadhar.match(adharSixteenDigit)) {
                return true;
            }
            else {
                alert("Enter valid Aadhar Number");
                return false;
            }
        }
    }
</script>

<script>
function filladdress(f) {
  if(f.checkadd.checked == true) {
    f.present_address.value = f.permanent_address.value;
   
  }
}
</script>

<script type="text/javascript">
    function PreviewImage() {
  
      var fileInput = document.getElementById('user_image');
        var filePath = fileInput.value;
        var allowedExtensions = /(\.jpg|\.jpeg|\.png)$/i;
        if(!allowedExtensions.exec(filePath)){
            alert('Please upload file having extensions .jpeg/.jpg/.png  only.');
            fileInput.value = '';
            return false;
        }else{
            //Image preview
            if (fileInput.files && fileInput.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('imagePreview').innerHTML = '<img src="'+e.target.result+'"/>';
                };
                reader.readAsDataURL(fileInput.files[0]);
            }
        }
  
  
    var oFReader = new FileReader(); oFReader.readAsDataURL(document.getElementById("user_image").files[0]);
    oFReader.onload = function (oFREvent) {
    document.getElementById("imagePreview").src = oFREvent.target.result;
    };
  };

  </script>
