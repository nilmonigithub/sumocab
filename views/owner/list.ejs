<%- include ../partials/header.html %>


<div class="table-list">
    <div class="row">
    
    
        <div class="col-md-12">

            <div class="panel panel-default panel-table">
              <div class="panel-heading pannerl-sec">
                <div class="row">
                  <div class="col col-xs-6">
                    <h3 class="panel-title">Owner List</h3>
                  </div>
                  <div id="flashmessage" ><h4 style="color:cornflowerblue;"><%= message %></h4> </div>
                  <div class="col col-xs-6 text-right">
                  
                    <button><a class="btn btn-sm btn-primary btn-create"  href="/owner/add"></i> Create New</a></button>   
                  </div>
                </div>
              </div>
              <div class="panel-body table-responsive">
                <table class="table table-striped table-bordered table-list" id="myTable">
                  <thead>
                    <tr>
                        <th>SL NO</th>
                        <th>Name</th>
                        <th>User Name</th>
                        <th>Mobile</th>
                        <th>Email</th>
                        <th>Image</th>            
                        <!-- <th>Date of Birth</th>
                        <th>Date of Joining</th>
                        <th>adhaar_card</th>
                        <th>permanent_address</th>
                        <th>present_address</th> -->
                        <th>Action</th>
                        
                    </tr>
                  </thead>
                  <tbody>

                    <% var i=1;
                     list.forEach(function(val) { %>
             
                     <tr>
                          <td> <%= i %></td>
                          <td><%= val.fullName %></td>
                          <td><%= val.username %></td>
                          <td><%= val.user_mobile %></td> 
                          <td><%= val.email %></td>
                          <td> <img <% if(val.user_image && val.user_image!=''){%>src="<%= baseurl %>/uploads/<%= val.user_image %>" <%} else{%> src="<%= baseurl %>/images/no_image.jpg"<%}%> height="50px" alt="">
                          </td>
                         <!-- <td><%= val.dob %></td> 
                         <td><%= val.doj %></td>
                         <td><%= val.adhaar_card %></td>
                         <td><%= val.permanent_address %></td>
                         <td><%= val.present_address %></td>  -->
                      
                         <td>
                             <a href="/owner/editowner/<%= val._id %>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                             <a href="/owner/delete/<%= val._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                         </td>
                     </tr>
                    <% i++; }) %>
                 </tbody>
             </table>
            
              </div>
            </div>

</div></div></div>

<%- include ../partials/footer.html %>

<script>
    $(document).ready(function(){
        $('#myTable').dataTable();
    });
</script>

