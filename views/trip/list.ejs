<%- include ../partials/header.html %>


<div class="table-list">
    <div class="row">
    
    
        <div class="col-md-12">

            <div class="panel panel-default panel-table">
              <div class="panel-heading pannerl-sec">
                <div class="row">
                  <div class="col col-xs-6">
                    <h3 class="panel-title">Trip List</h3>
                  </div>
                  <div id="flashmessage" ><h4 style="color:cornflowerblue;"><%= message %></h4> </div>
                  <div class="col col-xs-6 text-right">
                  
                    <button><a class="btn btn-sm btn-primary btn-create"  href="/trip"></i> Create New</a></button>   
                  </div>
                </div>
              </div>
              <div class="panel-body table-responsive">
                <table class="table table-striped table-bordered table-list" id="myTable">
                  <thead>
                        <tr>
                                <th style="width:15px">Sl No</th>
                               <th>Customer Name</th>
                               <th>Trip Type</th>
                               <th>Pickup Time</th>
                               <th>Drop Time</th>
                               <th>Vehicle Name</th>
                               <th>Driver Name</th>
                               <th>Actual Price</th>
                               <th>Action</th>
                           </tr>
                  </thead>
                  <tbody>
                        <% var i=1;
                          list.forEach(function(val) { %>
                          <tr>
                               <td> <%= i %></td>
                              <td><% customer_list.forEach(function(customer) {
                                if(customer._id==val.customer_id){ %>
                                <%= customer.username %>
                                <% } }); %></td>
                              <td><%= val.trip_type %></td> 
                              <td><%= val.customer_pickup_time %></td>
                              <td><%= val.customer_drop_time %></td>
                              <td><% vehicle_list.forEach(function(vehicle) {
                                if(vehicle._id==val.vehicle_id){ %>
                                <%= vehicle.model_name %>
                                <% } }); %></td>
                              <td><% driver_list.forEach(function(driver) {
                                if(driver._id==val.driver_id){ %>
                                <%= driver.username %>
                                <% } }); %></td>
                              <td><%= val.actual_price %></td> 
                             
                              <td>
                                  <a href="/trip/<%= val._id %>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                                  <a href="/trip/delete/<%= val._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                              </td>
                          </tr>
                         <% i++; }) %>
                      </tbody>
             </table>
            
              </div>
             
            </div>

</div></div></div>

<%- include ../partials/footer.html %>

<script>
    $(document).ready(function(){
        $('#myTable').dataTable();
    });
    </script>


