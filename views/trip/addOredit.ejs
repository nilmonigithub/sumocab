<%- include ../partials/header.html %>


<div class="driveradd">
<div class="container"  >
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="well well-sm">

        <form  action="/trip" method="POST" autocomplete="off">
            <input type="hidden" name="_id" value="<%= trip._id %>">
            <a style="float:right; margin-top: 5px;" class="btn btn-secondary" href="/trip/list"><i class="fa fa-list-alt"></i> View All</a>
            <h2><b><%= viewTitle %></h2><hr style="color:cornflowerblue; border:solid">

            
                <div   class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                                <label>Customer Id</label>
                                <!-- <input type="text" class="form-control" name="customer_id" value="<%= trip ? trip.customer_id : '' %>"> -->
                                <select name="customer_id" class="form-control">
                                        <option value="" selected disabled>-- Select --</option>
                                        <% customer_list.forEach(function(clist){%>
                                        <option <% if(trip.customer_id==clist._id){ %>selected="selected" <% }%> value="<%=clist._id%>"><%=clist.username%></option>
                                        <% })%>
                                </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                                <label>From Name</label>
                                <input type="text" class="form-control" name="from_name" value="<%= trip ? trip.from_name : '' %>">
                        </div>
                    </div>
                        
                    <div class="col-md-6">
                        <div class="form-group ">
                                <label>From City</label>
                                <input type="text" class="form-control" name="from_city"  value="<%= trip ? trip.from_city : '' %>">                       
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>From Latlong</label>
                                <input type="text" class="form-control" name="from_latlong"   value="<%= trip ? trip.from_latlong : '' %>">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>From Json</label>
                                <input type="text" class="form-control" name="from_json"  value="<%= trip ? trip.from_json : '' %>">                          
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>To Name</label>
                                <input type="text" class="form-control" name="to_name"   value="<%= trip ? trip.to_name : '' %>">                          
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>To City</label>
                                <input type="text" class="form-control" name="to_city"   value="<%= trip ? trip.to_city : '' %>">                        
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>To Latlong</label>
                                <input type="text" class="form-control" name="to_latlong"   value="<%= trip ? trip.to_latlong : '' %>">                        
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>To Json</label>
                                <input type="text" class="form-control" name="to_json"   value="<%= trip ? trip.to_json : '' %>">                        
                        </div>
                    </div>

                    <div class=" col-md-6 ">
                        <div class="form-group">
                            <label>Trip Type</label>          
                            <select name="trip_type"  class="form-control"> 
                
                                <option value="" selected disabled>--Select Type--</option>
                                <option value="One" <% if(trip.trip_type=='One'){%> selected="selected" <%}  %> >One</option>
                                <option value="Round" <% if(trip.trip_type=='Round'){%> selected="selected" <%}  %> >Round</option>
                    
                          </select>   
                        </div>              
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Customer Pickup Time</label>
                                <input type="time" class="form-control" name="customer_pickup_time"   value="<%= trip ? trip.customer_pickup_time : '' %>">                        
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Customer Drop Time</label>
                                <input type="time" class="form-control" name="customer_drop_time"   value="<%= trip ? trip.customer_drop_time : '' %>">                        
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Actual Pickup Time</label>
                                <input type="time" class="form-control" name="actual_pickup_time"   value="<%= trip ? trip.actual_pickup_time : '' %>">                        
                        </div>
                    </div>

                  

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Actual Drop Time</label>
                                <input type="time" class="form-control" name="actual_drop_time"    value="<%= trip ? trip.actual_drop_time : '' %>">                      
                        </div>
                    </div>

                    <div class="col-md-6">
                            <div class="form-group  ">
                                    <label>Vehicle Id</label>
                                    <!-- <input type="text" class="form-control" name="vehicle_id"   value="<%= trip ? trip.vehicle_id : '' %>">                       -->
                                    <select name="vehicle_id" class="form-control">
                                        <option value="" selected disabled>-- Select --</option>
                                        <% vehicle_list.forEach(function(vlist){%>
                                        <option <% if(trip.vehicle_id==vlist._id){ %>selected="selected" <% }%> value="<%=vlist._id%>"><%=vlist.model_name%></option>
                                        <% })%>
                                   </select>
                            </div>
                    </div>

                    <div class="col-md-6">
                            <div class="form-group  ">
                                    <label>Driver Id</label>
                                    <!-- <input type="text" class="form-control" name="driver_id"   value="<%= trip ? trip.driver_id : '' %>">                      -->
                                    <select name="driver_id" class="form-control">
                                        <option value="" selected disabled>-- Select --</option>
                                        <% driver_list.forEach(function(dlist){%>
                                        <option <% if(trip.driver_id==dlist._id){ %>selected="selected" <% }%> value="<%=dlist._id%>"><%=dlist.username%></option>
                                        <% })%>
                                   </select>
                            </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Estimated Distance</label>
                                <input type="text" class="form-control" name="estimated_distance"   value="<%= trip ? trip.estimated_distance : '' %>">                    
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Actual Distance</label>
                                <input type="text" class="form-control" name="actual_distance"   value="<%= trip ? trip.actual_distance : '' %>">                   
                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Estimated Time</label>
                                <input type="time" class="form-control" name="estimated_time"   value="<%= trip ? trip.estimated_time : '' %>">                   
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Actual Time</label>
                                <input type="time" class="form-control" name="actual_time"   value="<%= trip ? trip.actual_time : '' %>">                  
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Estimated Price</label>
                                <input type="text" class="form-control" name="estimated_price"  value="<%= trip ? trip.estimated_price : '' %>">                  
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group  ">
                                <label>Actual Price</label>
                                <input type="text" class="form-control" name="actual_price"  value="<%= trip ? trip.actual_price : '' %>">                  
                        </div>
                    </div>
                    
                    
                
             
                    <div class="col-md-12">
                            <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-database"></i> Submit</button>
                            
                        </div>
                    </div>
                </form>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

    <%- include ../partials/footer.html %>

