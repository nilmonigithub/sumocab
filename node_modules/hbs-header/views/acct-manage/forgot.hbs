<!-- views/forgot.ejs -->
<!doctype html>
<html>
<head>
    <title>Forgot Password</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="../css/index.css"> <!-- load styles -->
</head>
<body>
<div class="container">
	<div class="col-sm-6 col-sm-offset-3">

		<h1>Forgot Password</h1>

		<!-- show any messages that come back with authentication -->
		{{#ifCond message.length ">" 0 }}
			<div class="alert alert-danger">{{{message}}}</div>
		{{/ifCond}}

		<!-- LOGIN FORM -->
		<form class="login-area centered" action="/users/forgot" method="post">
			<div class="form-group">
				<label>Email</label>
				<input type="email" class="form-control" name="email">
			</div>

			<button type="submit" class="btn btn-lg">Reset Password</button>
		</form>
		<hr>

		<p>Remembered? <a href="/users/login">Login back here.</a></p>
 		<p>Or go back to the <a href="/">Front Page</a>.</p>

	</div>
</div>
</body>
</html>
